{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Open 2D Studio",
  "version": "0.22.0",
  "identifier": "com.open2dstudio.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Open 2D Studio",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Graphics and Design",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "fileAssociations": [
      {
        "ext": ["o2ds"],
        "mimeType": "application/x-open2dstudio",
        "description": "Open 2D Studio Project"
      },
      {
        "ext": ["dxf"],
        "mimeType": "image/vnd.dxf",
        "description": "DXF Drawing"
      }
    ],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libappindicator3-1"],
        "section": "graphics",
        "priority": "optional"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "createUpdaterArtifacts": "v1Compatible"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/OpenAEC-Foundation/Open-2D-Studio/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFGREIwQ0IxMkI5MzYxMUIKUldRYllaTXJzUXpiSDlZOVBlbUpmdWlVTmlTWkhjQThoUm9JMnQrcUFSckhJVTRSSEc4REtWengK"
    }
  }
}
